<p id="notice"><%= notice %></p>

<h1>Favorite Artists</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_artists.each do |favorite_artist| %>
      <tr>
        <td><%= favorite_artist.artist %></td>
        <td><%= link_to 'Show', favorite_artist %></td>
        <td><%= link_to 'Edit', edit_favorite_artist_path(favorite_artist) %></td>
        <td><%= link_to 'Destroy', favorite_artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite Artist', new_favorite_artist_path %>
