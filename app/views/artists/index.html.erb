<p id="notice"><%= notice %></p>

<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header">Artists</h1>
        </div>

        <% @artists.each do |artist| %>
          <div class="col-lg-3 col-md-4 col-xs-6 thumb">
              <%= link_to(artist, class: 'thumbnail') do %>
                  <% if artist.image then %>
                      <%= image_tag(artist.image, class: 'img-responsive', alt: artist.name) %>
                  <% else %>
                      <%= image_tag(image_url('avatar.png'), class: 'img-responsive', alt: artist.name) %>
                  <% end %>
                  <div class="sub-heading"><%= artist.name %></div>
              <% end %>
          </div>
        <% end %>
    </div>

</div>
<!-- /.container -->
<%= link_to 'New Artist', new_artist_path %>
